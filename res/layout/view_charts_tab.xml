<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

        <TextView android:id="@+id/text_minute"
                  android:layout_width="fill_parent"
                  android:text="分时"
                  android:layout_centerInParent="true"
                  style="@style/tab_bg_style"/>

        <View
                android:id="@+id/minute_red"
                android:layout_width="wrap_content"
                style="@style/tab_red_line_style"
                android:background="@color/red"/>
    </RelativeLayout>


    <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">


        <TextView android:layout_width="fill_parent"
                  android:id="@+id/text_day_K"
                  android:layout_weight="1"
                  android:text="日K"
                  android:background="@color/grey_t30"
                  style="@style/tab_bg_style"/>
        <View
                android:id="@+id/day_red"
                android:layout_width="fill_parent"
                style="@style/tab_red_line_style"
                android:visibility="gone"
                android:background="@color/red"/>

    </RelativeLayout>


    <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">


        <TextView android:layout_width="fill_parent"
                  android:id="@+id/text_week_K"
                  android:text="周K"
                  android:background="@color/grey_t30"
                  style="@style/tab_bg_style"/>
        <View
                android:id="@+id/week_red"
                android:visibility="gone"
                android:layout_width="fill_parent"
                style="@style/tab_red_line_style"
                android:background="@color/red"/>


    </RelativeLayout>

    <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">


        <TextView android:layout_width="fill_parent"
                  android:text="月K"
                  android:id="@+id/text_month_K"
                  android:background="@color/grey_t30"
                  style="@style/tab_bg_style"/>
        <View
                android:id="@+id/month_red"
                android:layout_width="fill_parent"
                style="@style/tab_red_line_style"
                android:visibility="gone"
                android:background="@color/red"/>


    </RelativeLayout>


</LinearLayout>